<div class="container col-lg-12 mx-auto text-center">
  <h3>Ingresar</h3>

  <%= form_for( resource, as: resource_name, url: session_path(resource_name) ) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="form-group mx-auto">
      <%= f.label "Email" %><br />
      <%= f.email_field :email, autofocus: true, class: "col-md-6 mx-auto"  %>
    </div>

    <div class="form-group">
      <%= f.label "ContraseÃ±a" %><br />
      <%= f.password_field :password, autocomplete: "off", class: "col-md-6 mx-auto" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group my-2">
        <%= f.check_box :remember_me %>
        <%= f.label :recuerdame %>
      </div>
    <% end -%>

    <div class="actions my-2">
      <%= f.submit "Ingresar", class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>

</div>
