<div class="container mx-auto text-center col-lg-12">
  <h3>Formulario de Registro</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "col-md-6 mx-auto" %>
    </div>

    <div class="form-group">
      <%= f.label "Contraseña" %>
      <% if @minimum_password_length %>
      <em>( mínimo <%= @minimum_password_length %> caracteres )</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "col-md-6 mx-auto" %>
    </div>

    <div class="form-group">
      <%= f.label "Confirmar contraseña" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "col-md-6 mx-auto" %>
    </div>

    <div class="actions">
      <%= f.submit "Registrarse", class: "btn btn-primary my-2" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
